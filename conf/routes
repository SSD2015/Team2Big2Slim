# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index()

POST        /creater             controllers.Application.createProject()
GET         /create              controllers.Application.addProject()

POST        /vote                controllers.Vote.submitVote()
GET         /vote                controllers.Vote.vote()

GET         /voteResult          controllers.Vote.showVoteResult()


GET         /group1              controllers.Application.group1()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)


GET         /login               controllers.Login.login()
POST        /login               controllers.Login.authenticate()

GET         /quicknote           controllers.Quicknote.index()
POST        /quicknote           controllers.Quicknote.addNote()

GET         /rate                controllers.Rate.rate()
POST        /rate                controllers.Rate.submitRate()
GET         /rateResult          controllers.Rate.showRateResult()

GET         /install             controllers.Application.mockDatabase()


GET        /profile/:id         controllers.ProjectList.index(id:Integer)

GET        /screenshot1/:id     controllers.ProjectList.sc1(id:Integer)

GET        /screenshot2/:id     controllers.ProjectList.sc2(id:Integer)

GET        /screenshot3/:id     controllers.ProjectList.sc3(id:Integer)
    