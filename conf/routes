# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                controllers.Application.index()

POST        /vote                            controllers.Vote.submitVote()

GET         /voteResult                      controllers.Vote.showVoteResult()


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)


GET         /login                           controllers.Login.login()
POST        /login                           controllers.Login.authenticate()

GET         /logout                          controllers.Application.logout()


POST        /rate                            controllers.Rate.submitRate()
GET         /rateResult                      controllers.Rate.showRateResult()

#Comment so, no one can't install
GET         /install                         controllers.Application.mockDatabase()


GET         /profile/:id                     controllers.ProjectList.index(id:Integer)
GET         /profile/assets/*file            controllers.Assets.at(path="/public", file)

GET         /screenshot1/:id                 controllers.ProjectList.sc1(id:Integer)
GET         /screenshot1/assets/*file        controllers.Assets.at(path="/public", file)

GET         /screenshot2/:id                 controllers.ProjectList.sc2(id:Integer)
GET         /screenshot2/assets/*file        controllers.Assets.at(path="/public", file)

GET         /screenshot3/:id                 controllers.ProjectList.sc3(id:Integer)
GET         /screenshot3/assets/*file        controllers.Assets.at(path="/public", file)

GET         /admin                           controllers.Admin.adminIndex()
GET         /admin/addUser                   controllers.Admin.addUser()